{
    "compilerOptions": {
      "strict": true,
      "target": "ES2015",
      "module": "ES2015",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "lib": ["DOM", "ES2015"],
      "jsx": "react-jsx",
      "sourceMap": true,
      "removeComments": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "baseUrl": "./src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }